<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hale.pinrenpin.PinRenPinActivity"
    android:background="@android:color/white">
    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/backBtn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:onClick="touchBack"
        android:background="@drawable/back"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/pinrenpin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desTV"
        android:text=""
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_red_dark"/>
    <TextView
        android:textAlignment="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/desTV"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/goalTV"
        android:background="@drawable/red_circle"/>
    <TextView
        android:textAlignment="center"
        android:text=""
        android:id="@+id/changeTV"
        android:textColor="@android:color/white"
        android:textSize="80sp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_below="@id/goalTV"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:background="@drawable/green_circle"
        android:onClick="touchChange"
        android:gravity="center"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/changeTV"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:background="@drawable/start_bg"
        android:id="@+id/startBtn"
        android:textColor="@android:color/white"
        android:text="开始"
        android:onClick="touchStart"/>
    <TextView
        android:text="(点击开始，绿色按钮的数字会一直变化，选中绿色按钮的数字，当绿色按钮数字跟红色按钮数字相同时表示胜利。胜利后可获取0.1-0.5积分)"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/startBtn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
